                    </div>
                </div>
                
                <!-- Trainers Grid -->
                <div id="trainersGrid" class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-6">
                    <!-- Trainer cards will be dynamically inserted here -->
