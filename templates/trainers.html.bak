                        <button onclick="changePage(1)" class="px-4 py-2 bg-indigo-600 text-white rounded-lg">1</button>
                        <button onclick="changePage(2)" class="px-4 py-2 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors">2</button>
                        <button onclick="changePage(3)" class="px-4 py-2 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors">3</button>
                        <button onclick="changePage(4)" class="px-4 py-2 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors">4</button>
                        <button onclick="changePage('next')" class="px-3 py-2 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors">
