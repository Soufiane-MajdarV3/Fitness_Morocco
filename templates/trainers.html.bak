            <span id="toastMessage">تمت العملية بنجاح!</span>
        </div>
    </div>
    
    <!-- JavaScript -->
    <script>
        // Sample trainer data
        const trainers = [
            {
                id: 1,
                name: "أحمد الرماحي",
                specialty: "لياقة بدنية",
                city: "الدار البيضاء",
                rating: 4.8,
                reviews: 124,
                price: 250,
                experience: "8 سنوات",
                image: "https://picsum.photos/seed/trainer1/300/300.jpg",
                specialties: ["لياقة بدنية", "كروس فت", "تغذية"]
            },
            {
                id: 2,
                name: "فاطمة الزهراء",
                specialty: "يوغا",
                city: "الرباط",
                rating: 4.9,
                reviews: 89,
                price: 200,
                experience: "5 سنوات",
                image: "https://picsum.photos/seed/trainer2/300/300.jpg",
                specialties: ["يوغا", "تأمل", "مرونة"]
            },
            {
                id: 3,
                name: "يوسف الأمين",
                specialty: "ملاكمة",
                city: "مراكش",
                rating: 4.7,
                reviews: 156,
                price: 300,
                experience: "10 سنوات",
                image: "https://picsum.photos/seed/trainer3/300/300.jpg",
                specialties: ["ملاكمة", "دفاع عن النفس", "لياقة بدنية"]
            },
            {
                id: 4,
                name: "نور الدين",
                specialty: "سباحة",
                city: "فاس",
                rating: 4.6,
                reviews: 67,
                price: 280,
                experience: "6 سنوات",
                image: "https://picsum.photos/seed/trainer4/300/300.jpg",
                specialties: ["سباحة", "لياقة مائية", "إعادة تأهيل"]
            },
            {
                id: 5,
                name: "سارة البكري",
                specialty: "كروس فت",
                city: "طنجة",
                rating: 4.9,
                reviews: 203,
                price: 350,
                experience: "7 سنوات",
                image: "https://picsum.photos/seed/trainer5/300/300.jpg",
                specialties: ["كروس فت", "قوة", "تحمل"]
            },
            {
                id: 6,
                name: "عبد الرحيم",
                specialty: "تغذية",
                city: "أكادير",
                rating: 4.8,
                reviews: 145,
                price: 220,
                experience: "12 سنة",
                image: "https://picsum.photos/seed/trainer6/300/300.jpg",
                specialties: ["تغذية", "تخسيس", "بناء عضل"]
            }
        ];
        
        let currentPage = 1;
        let filteredTrainers = [...trainers];
        let ratingFilter = 0;
        
        // Initialize the page
        document.addEventListener('DOMContentLoaded', () => {
            loadTrainers();
            loadSearchParameters();
        });
        
        // Load search parameters from localStorage
        function loadSearchParameters() {
            const city = localStorage.getItem('searchCity');
            const specialty = localStorage.getItem('searchSpecialty');
            
            if (city) {
                document.getElementById('cityFilter').value = city;
            }
            if (specialty) {
                document.getElementById('specialtyFilter').value = specialty;
            }
            
            if (city || specialty) {
                applyFilters();
            }
        }
        
        // Load trainers into the grid
        function loadTrainers() {
            const grid = document.getElementById('trainersGrid');
            grid.innerHTML = '';
            
            filteredTrainers.forEach(trainer => {
                const card = createTrainerCard(trainer);
                grid.innerHTML += card;
            });
            
            updateResultsCount();
        }
        
        // Create trainer card HTML
        function createTrainerCard(trainer) {
            const stars = generateStars(trainer.rating);
            
            return `
                <div class="trainer-card bg-white rounded-xl shadow-lg overflow-hidden">
                    <div class="relative">
                        <img src="${trainer.image}" alt="${trainer.name}" class="w-full h-48 object-cover">
                        <div class="absolute top-2 left-2 bg-indigo-600 text-white px-2 py-1 rounded-lg text-sm">
                            ${trainer.specialty}
                        </div>
                    </div>
                    
                    <div class="p-6">
                        <div class="flex justify-between items-start mb-3">
                            <div>
                                <h3 class="text-xl font-semibold">${trainer.name}</h3>
                                <p class="text-gray-600 text-sm">${trainer.city}</p>
                            </div>
                            <div class="text-left">
                                <p class="text-2xl font-bold text-indigo-600">${trainer.price}</p>
                                <p class="text-gray-600 text-sm">درهم/ساعة</p>
                            </div>
                        </div>
                        
                        <div class="flex items-center mb-3">
                            <div class="star-rating">${stars}</div>
                            <span class="mr-2 text-gray-600">(${trainer.reviews} تقييم)</span>
                        </div>
                        
                        <div class="mb-4">
                            <p class="text-gray-600 text-sm mb-2">التخصصات:</p>
                            <div class="flex flex-wrap gap-2">
                                ${trainer.specialties.map(spec => `
                                    <span class="bg-gray-100 text-gray-700 px-2 py-1 rounded-full text-xs">
                                        ${spec}
                                    </span>
                                `).join('')}
                            </div>
                        </div>
                        
                        <div class="flex items-center mb-4">
                            <i class="fas fa-briefcase text-gray-400 ml-2"></i>
                            <span class="text-gray-600 text-sm">${trainer.experience} خبرة</span>
                        </div>
                        
                        <div class="flex space-x-reverse space-x-2">
                            <button onclick="viewTrainerProfile(${trainer.id})" class="flex-1 bg-indigo-600 text-white px-4 py-2 rounded-lg hover:bg-indigo-700 transition-colors">
                                عرض التفاصيل
                            </button>
                            <button onclick="bookTrainer(${trainer.id})" class="flex-1 bg-gray-200 text-gray-700 px-4 py-2 rounded-lg hover:bg-gray-300 transition-colors">
                                احجز الآن
                            </button>
                        </div>
                    </div>
                </div>
            `;
        }
        
        // Generate star rating HTML
        function generateStars(rating) {
            const fullStars = Math.floor(rating);
            const hasHalfStar = rating % 1 !== 0;
            let stars = '';
            
            for (let i = 0; i < fullStars; i++) {
                stars += '<i class="fas fa-star"></i>';
            }
            
            if (hasHalfStar) {
                stars += '<i class="fas fa-star-half-alt"></i>';
            }
            
            const emptyStars = 5 - Math.ceil(rating);
            for (let i = 0; i < emptyStars; i++) {
                stars += '<i class="far fa-star"></i>';
            }
            
            return stars;
        }
        
        // Apply filters
        function applyFilters() {
            const city = document.getElementById('cityFilter').value;
            const specialty = document.getElementById('specialtyFilter').value;
            const minPrice = document.getElementById('minPrice').value;
            const maxPrice = document.getElementById('maxPrice').value;
            const experience = document.getElementById('experienceFilter').value;
            
            filteredTrainers = trainers.filter(trainer => {
                let matches = true;
                
                if (city && trainer.city !== getCityName(city)) {
                    matches = false;
                }
                
                if (specialty && trainer.specialty !== getSpecialtyName(specialty)) {
                    matches = false;
                }
                
                if (minPrice && trainer.price < parseInt(minPrice)) {
                    matches = false;
                }
                
                if (maxPrice && trainer.price > parseInt(maxPrice)) {
                    matches = false;
                }
                
                if (experience && !matchesExperience(trainer.experience, experience)) {
                    matches = false;
                }
                
                if (ratingFilter > 0 && trainer.rating < ratingFilter) {
                    matches = false;
                }
                
                return matches;
            });
            
            loadTrainers();
            showToast('تم تطبيق الفلاتر بنجاح');
        }
        
        // Reset filters
        function resetFilters() {
            document.getElementById('cityFilter').value = '';
            document.getElementById('specialtyFilter').value = '';
            document.getElementById('minPrice').value = '';
            document.getElementById('maxPrice').value = '';
            document.getElementById('experienceFilter').value = '';
            ratingFilter = 0;
            
            filteredTrainers = [...trainers];
            loadTrainers();
            showToast('تم إعادة تعيين الفلاتر');
        }
        
        // Set rating filter
        function setRatingFilter(rating) {
            ratingFilter = rating;
            applyFilters();
        }
        
        // View trainer profile
        function viewTrainerProfile(trainerId) {
            localStorage.setItem('selectedTrainerId', trainerId);
            window.location.href = 'trainer-profile.html';
        }
        
        // Book trainer
        function bookTrainer(trainerId) {
            localStorage.setItem('selectedTrainerId', trainerId);
            window.location.href = 'booking.html';
        }
        
        // Change page
        function changePage(page) {
            // Implementation for pagination
            if (page === 'prev' && currentPage > 1) {
                currentPage--;
            } else if (page === 'next' && currentPage < 4) {
                currentPage++;
            } else if (typeof page === 'number') {
                currentPage = page;
            }
            
            // Update pagination buttons
            updatePagination();
            
            // Scroll to top
            window.scrollTo({ top: 0, behavior: 'smooth' });
        }
        
        // Update pagination buttons
        function updatePagination() {
            const buttons = document.querySelectorAll('nav button');
            buttons.forEach((button, index) => {
                if (index > 0 && index < 5) {
                    button.classList.remove('bg-indigo-600', 'text-white');
                    button.classList.add('bg-white', 'border', 'border-gray-300');
                    
                    if (index === currentPage) {
                        button.classList.remove('bg-white', 'border', 'border-gray-300');
                        button.classList.add('bg-indigo-600', 'text-white');
                    }
                }
            });
        }
        
        // Update results count
        function updateResultsCount() {
            document.getElementById('resultsCount').textContent = filteredTrainers.length;
        }
        
        // Helper functions
        function getCityName(cityCode) {
            const cities = {
                'casablanca': 'الدار البيضاء',
                'rabat': 'الرباط',
                'marrakech': 'مراكش',
                'fes': 'فاس',
                'tangier': 'طنجة',
                'agadir': 'أكادير'
            };
            return cities[cityCode] || cityCode;
        }
        
        function getSpecialtyName(specialtyCode) {
            const specialties = {
                'fitness': 'لياقة بدنية',
                'crossfit': 'كروس فت',
                'yoga': 'يوغا',
                'boxing': 'ملاكمة',
                'swimming': 'سباحة',
                'nutrition': 'تغذية'
            };
            return specialties[specialtyCode] || specialtyCode;
        }
        
        function matchesExperience(experience, filter) {
            const years = parseInt(experience);
            switch (filter) {
                case '1': return years >= 1 && years <= 3;
                case '2': return years >= 3 && years <= 5;
                case '3': return years >= 5 && years <= 10;
                case '4': return years >= 10;
                default: return true;
            }
        }
        
        // Mobile menu toggle
        const mobileMenuBtn = document.getElementById('mobileMenuBtn');
        const mobileMenu = document.getElementById('mobileMenu');
        
        mobileMenuBtn.addEventListener('click', () => {
            mobileMenu.classList.toggle('hidden');
        });
        
        // Mobile filter toggle
        const mobileFilterToggle = document.getElementById('mobileFilterToggle');
        const filterSidebar = document.getElementById('filterSidebar');
        
        mobileFilterToggle.addEventListener('click', () => {
            filterSidebar.classList.toggle('hidden');
        });
        
        // Dark mode toggle
        const darkModeToggle = document.getElementById('darkModeToggle');
        const body = document.body;
        
        darkModeToggle.addEventListener('click', () => {
            body.classList.toggle('dark');
            const icon = darkModeToggle.querySelector('i');
            if (body.classList.contains('dark')) {
                icon.classList.remove('fa-moon');
                icon.classList.add('fa-sun');
            } else {
                icon.classList.remove('fa-sun');
                icon.classList.add('fa-moon');
            }
        });
        
        // Sort functionality
        document.getElementById('sortSelect').addEventListener('change', (e) => {
            const sortBy = e.target.value;
            
            switch (sortBy) {
                case 'rating':
                    filteredTrainers.sort((a, b) => b.rating - a.rating);
                    break;
                case 'price-low':
                    filteredTrainers.sort((a, b) => a.price - b.price);
                    break;
                case 'price-high':
                    filteredTrainers.sort((a, b) => b.price - a.price);
                    break;
                case 'experience':
                    filteredTrainers.sort((a, b) => {
                        const aExp = parseInt(a.experience);
                        const bExp = parseInt(b.experience);
                        return bExp - aExp;
                    });
                    break;
            }
            
            loadTrainers();
        });
        
        // Toast notification function
        function showToast(message, type = 'success') {
            const toast = document.getElementById('toast');
            const toastMessage = document.getElementById('toastMessage');
            
            toastMessage.textContent = message;
            
            if (type === 'error') {
                toast.classList.remove('bg-green-500');
                toast.classList.add('bg-red-500');
            } else {
                toast.classList.remove('bg-red-500');
                toast.classList.add('bg-green-500');
            }
            
            toast.classList.remove('translate-y-full');
            
            setTimeout(() => {
                toast.classList.add('translate-y-full');
            }, 3000);
        }
    </script>
</body>
</html>