            </aside>
            
            <!-- Trainers Grid -->
            <section class="lg:w-3/4">
                <!-- Results Header -->
                <div class="flex justify-between items-center mb-6">
                    <div>
                        <h2 class="text-2xl font-semibold">المدربون</h2>
                        <p class="text-gray-600">تم العثور على <span id="resultsCount">24</span> مدرب</p>
