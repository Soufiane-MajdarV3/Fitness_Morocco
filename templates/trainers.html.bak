                <!-- Pagination -->
                <div class="mt-8 flex justify-center">
                    <nav class="flex space-x-reverse space-x-2">
                        <button onclick="changePage('prev')" class="px-3 py-2 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors">
                            <i class="fas fa-chevron-right"></i>
